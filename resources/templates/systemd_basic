[Unit]
Description=<NAME>
StartLimitBurst=10
StartLimitIntervalSec=50

[Service]
Type=simple
StandardOutput=journal
ExecStartPre=/usr/bin/sleep <DELAY>
ExecStart=<EXE>
ExecStartPost=/usr/bin/notify-send "<NAME> Service Started" "<NAME> Service is now running in the background."
Restart=on-failure
RestartSec=10

[Install]
WantedBy=default.target
